magenta$geno<- c('wt','wt','wt','ko','ko','ko' )
magenta$geno<- factor(magenta$geno, levels = c('wt', 'ko'))


library(ggpubr)
p<- ggplot(magenta, aes(x = geno, y = MEmagenta, fill = geno)) +
  geom_boxplot() +
  geom_jitter(width = 0.1, size = 2) + 
  labs(title = "Magenta module",
       x = "",
       y = "ME")+
  theme_classic() +
